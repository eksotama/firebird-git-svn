buildb: isc4.gdb yachts.lnk

isc4.gdb : $(ISC_GDB)
	-ln -sf $(ISC_GDB) $@

yachts.lnk: 
	ln -fs $(SRC_ROOT)/refDatabases/empty.gdb yachts.lnk


AllObjects = $(FBCLIENT_Objects)

Dependencies = $(AllObjects:.o=.d)


FORCE:

-include $(Dependencies)
