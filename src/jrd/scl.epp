	USHORT p_names_priv;
	USHORT p_names_acl;
	const TEXT *p_names_string;
} P_NAMES;

static const P_NAMES p_names[] =
{
	{ SCL_protect, priv_protect, "protect" },
	{ SCL_control, priv_control, "control" },
	{ SCL_delete, priv_delete, "delete" },
	{ SCL_sql_insert, priv_sql_insert, "insert/write" },
