static inline void check_and_move(UCHAR* to, UCHAR from, STR* start, ULONG* length_ptr)
{
	if (((*start)->str_data + *length_ptr) < (to + 1))
	{
		*start = GRANT_realloc_acl(*start, &to, length_ptr);
	}
	*to++ = from;
}

